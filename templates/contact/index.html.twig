{% extends 'base.html.twig' %}

{% block title %}{{ parent ()}} | Contact{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="py-1 mb-3 display-4 text-center">
                Nous contacter
            </h1>
        </div>
    </div>
    <!-- Wrapper container -->
    <div class="container py-4">
        {% for message in app.flashes ('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
        {% endfor %}
        <!-- Bootstrap 5 starter form -->
        {{ form_start (form, {'attr': {'id':'contactForm'}}) }}

            <!-- Name input -->
            <div class="mb-3">
            {{ form_row (form.nom)}}
            </div>

            <!-- Email address input -->
            <div class="mb-3">
            {{ form_row (form.email)}}
            </div>

            <!-- Telephone input -->

            <div class="mb-3">
            {{ form_row (form.telephone)}}
            </div>

            <!-- Message input -->
            <div class="mb-3">
            {{ form_row (form.message)}}
            </div>

            <!-- Form submit button -->
            <div class="d-grid">
                <button class="btn btn-primary btn-lg" type="submit">Envoyer</button>
            </div>
        {{ form_end (form)}}
    </div>

{% endblock %}
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" async></script>
    <script>
        let fade_out = function() {
            $(".alert").fadeOut().empty();
        }
        setTimeout(fade_out, 5000);
    </script>
{% endblock%}
