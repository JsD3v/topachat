{% extends 'base.html.twig' %}

{% block title %}{{ parent ()}} | Contact{% endblock %}

{% block body %}
    <!-- Wrapper container -->
    <div class="container py-4">

        <!-- Bootstrap 5 starter form -->
        <form id="contactForm">

            <!-- Name input -->
            <div class="mb-3">
                <label class="form-label" for="name">Nom</label>
                <input class="form-control" id="name" type="text" placeholder="Name" />
            </div>

            <!-- Email address input -->
            <div class="mb-3">
                <label class="form-label" for="emailAddress">Email </label>
                <input class="form-control" id="emailAddress" type="email" placeholder="Email Address" />
            </div>

            <!-- Telephone input -->

            <div class="mb-3">
                <label class="form-label" for="emailAddress">Téléphone</label>
                <input class="form-control" id="emailAddress" type="tel" placeholder="Votre numéro de téléphone" />
            </div>

            <!-- Message input -->
            <div class="mb-3">
                <label class="form-label" for="message">Message</label>
                <textarea class="form-control" id="message" type="text" placeholder="Message" style="height: 10rem;"></textarea>
            </div>

            <!-- Form submit button -->
            <div class="d-grid">
                <button class="btn btn-primary btn-lg" type="submit">Envoyer</button>
            </div>

        </form>

    </div>
{% endblock %}
